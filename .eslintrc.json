{
  "plugins": ["import"],
  "root": true,
  "extends": [
    "@sanity/eslint-config-studio",
    "next/core-web-vitals",
    "plugin:import/recommended",
    "next",
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": ["error", "never"],
    "consistent-return": 0,
    "consistent-this": ["error", "that"],
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
    "id-length": [
      "error",
      {
        "min": 3,
        "exceptions": ["S", "of", "to"]
      }
    ],
    "import/no-anonymous-default-export": "error",
    "import/order": [
      "error",
      {
        "groups": ["builtin"]
      }
    ],
    "import/no-unresolved": "error",
    "lines-around-comment": 0,
    "no-alert": "error",
    "no-console": "error",
    "no-implicit-coercion": 0,
    "no-negated-condition": "error",
    "no-new": "error",
    "no-unexpected-multiline": "error",
    "no-unused-vars": "error",
    "operator-linebreak": ["error", "before"],
    "prefer-const": ["error", { "destructuring": "all" }],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    // Next.js specific rules
    "@next/next/no-html-link-for-pages": "error", // Enforce proper navigation within Next.js pages
    "@next/next/no-img-element": "warn", // Warn against using <img> for performance reasons
    "@next/next/no-page-custom-font": "warn", // Warn against page-only custom fonts
    "@next/next/no-sync-scripts": "error", // Prevent usage of synchronous scripts
    "@next/next/no-title-in-document-head": "error" // Prevent usage of <title> within Head component
  }
}
